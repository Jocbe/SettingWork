{namespace edit}

/**
 * Form for editing a question set
 * @param id
 * @param name
 */
{template .set}
	{call shared.header /}
	<form method="post" action="/set/0">
        <input type="text" name="name" value="{$name}" />
        <input type="hidden" name="id" value="{$id}" />
        <input type="submit"/>
	</form>
	{call shared.footer /}
{/template}