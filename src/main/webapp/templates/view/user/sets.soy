{namespace view.user}

/**
 * Displays a full page with a given user
 * @param id
 * @param name
 * @param sets
 */
{template .sets}
	{call shared.header /}
	<h1>User '{$name}'</h1>
	{call shared.set.multiple}
		{param sets: $sets /}
	{/call}
	<a href="/user/{$id}">Back to user profile</a>
	{call shared.footer /}
{/template}
